{
  "name": "@acme/template-monorepo",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=22.14.0",
    "pnpm": ">=9.6.0"
  },
  "version": "1.0.0",
  "packageManager": "pnpm@10.11.1",
  "scripts": {
    "// * „Éì„É´„Éâ * //": "",
    "build": "turbo run build",
    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "npx turbo run clean",
    "// * ÈñãÁô∫ * //": "",
    "dev": "turbo dev --continue --no-daemon",
    "dev:watch": "turbo dev --continue --no-daemon",
    "// * lint, prettier * //": "",
    "format": "turbo run format --continue -- --cache --cache-location .cache/.prettiercache",
    "format:fix": "turbo run format --continue -- --write --cache --cache-location .cache/.prettiercache",
    "lint": "turbo run lint --continue -- --cache --cache-location .cache/.eslintcache",
    "lint:fix": "turbo run lint --continue -- --fix --cache --cache-location .cache/.eslintcache",
    "lint:staged": "lint-staged",
    "lint:ws": "pnpm dlx sherif@latest -f",
    "postinstall": "pnpm -F @acme/setup build && pnpm -F @acme/setup setup-template && pnpm clean && pnpm i --ignore-scripts && pnpm build && pnpm lint:ws && echo '‚úÖ Postinstall complete!'",
    "setup-template": "pnpm clean && pnpm i && pnpm -F @acme/setup setup-template && pnpm clean && pnpm i && pnpm build && echo '‚úÖ Setup complete!'",
    "typecheck": "turbo run typecheck",
    "premerge": "pnpm lint:fix && pnpm lint:ws && pnpm format:fix && pnpm typecheck",
    "// * Docker * //": "",
    "docker:up": "cd tooling/docker && docker-compose up -d",
    "docker:down": "cd tooling/docker && docker-compose down",
    "docker:logs": "cd tooling/docker && docker-compose logs -f",
    "// * misc * //": "",
    "gen": "turbo gen init",
    "prepare": "husky"
  },
  "devDependencies": {
    "@acme/commitlint-config": "workspace:*",
    "@acme/prettier-config": "workspace:*",
    "@acme/setup": "workspace:*",
    "@turbo/gen": "^2.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.0",
    "prettier": "catalog:",
    "turbo": "^2.5.4",
    "typescript": "catalog:"
  },
  "prettier": "@acme/prettier-config",
  "commitlint": {
    "extends": [
      "@acme/commitlint-config"
    ]
  },
  "lint-staged": {
    "{packages,tooling}/*/src/**/*.{js,jsx,ts,tsx}": [
      "pnpm lint:fix",
      "pnpm format:fix"
    ],
    "{docs,packages,tooling}/**/*.{md,json}": [
      "pnpm format:fix"
    ],
    "{packages,tooling}/**/*.{json,yml,yaml}": [
      "pnpm format:fix"
    ],
    "{packages,tooling}/*/src/**/*.{ts,tsx}": [
      "bash -c 'pnpm typecheck'",
      "echo '\n‚ö†Ô∏è  TypeScript files detected in staged changes.\nüí° Please run type checking manually if needed: pnpm typecheck\n'"
    ]
  }
}
